{
    "app-id" : "com.raggesilver.Proton",
    "runtime" : "org.gnome.Sdk",
    "runtime-version" : "3.36",
    "sdk" : "org.gnome.Sdk",
    "command" : "proton",
    "finish-args" : [
        "--allow=devel",
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        "--filesystem=host",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--talk-name=org.freedesktop.Flatpak",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "marble",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.com/raggesilver/marble",
                    "tag": "v1.2.2"
                }
            ]
        },
        {
            "name" : "proton",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.com/raggesilver/proton2"
                }
            ]
        }
    ]
}
